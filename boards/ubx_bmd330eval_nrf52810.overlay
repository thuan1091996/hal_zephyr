// ------------------ Remove DK board default overlay ------------------ // 


/ {
	aliases {
	};
};

// ------------------ Application  ------------------ // 


/ {
	zephyr,user {
		pwm_pins {
			compatible = "pwm-leds";
			pwm0_pins: pwm0_pins {
				pwms =	<&pwm0 0 PWM_KHZ(2000) PWM_POLARITY_NORMAL>,
						<&pwm0 1 PWM_KHZ(2000) PWM_POLARITY_NORMAL>,
						<&pwm0 2 PWM_KHZ(2000) PWM_POLARITY_NORMAL>,
						<&pwm0 3 PWM_KHZ(2000) PWM_POLARITY_NORMAL>;
			};
		};
	};
};


&spi0 {
	cs-gpios = <&gpio0 25 0>;
};

&pinctrl {

	pwm0_sleep: pwm0_sleep
	{
		group1 {
			psels = <NRF_PSEL(PWM_OUT0, 0, 9)>,
					<NRF_PSEL(PWM_OUT1, 0, 10)>,
					<NRF_PSEL(PWM_OUT2, 0, 11)>,
					<NRF_PSEL(PWM_OUT3, 0, 12)>;
		};
	};

	pwm0_default: pwm0_default
	{
		group1 {
			psels = <NRF_PSEL(PWM_OUT0, 0, 9)>,
					<NRF_PSEL(PWM_OUT1, 0, 10)>,
					<NRF_PSEL(PWM_OUT2, 0, 11)>,
					<NRF_PSEL(PWM_OUT3, 0, 12)>;
		};
	};

	spi0_default: spi0_default {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK, 0, 22)>,
					<NRF_PSEL(SPIM_MOSI, 0, 23)>,
					<NRF_PSEL(SPIM_MISO, 0, 24)>;
		};
	};

	spi0_sleep: spi0_sleep {
		group1 {
			psels = <NRF_PSEL(SPIM_SCK, 0, 22)>,
					<NRF_PSEL(SPIM_MOSI, 0, 23)>,
					<NRF_PSEL(SPIM_MISO, 0, 24)>;
		};
	};
};